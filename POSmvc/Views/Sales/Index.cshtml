@model POSmvc.Models.PosViewModel.MakeSalesData

@{
    ViewData["Title"] = "Index";
}

<h2>Full Details of transaction</h2>

@*<p>
    <a asp-action="Create">Make Sales</a>
</p>*@



<hr />

<table class="table table-striped table-hover">
    <thead class="thead">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Sale.TransctionID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sale.TotalAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sale.AmountPaid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sale.Balance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sale.TranscationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Sales)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TransctionID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AmountPaid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Balance)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TranscationDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer.FirstName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID" class="btn Inverse-special-btn"><span class="glyphicon glyphicon-camera"></span></a> 
                    <a asp-area="" asp-action="Details" asp-route-transactionid="@item.TransctionID" class="btn special-btn"><span class="glyphicon glyphicon-check"></span></a>
                   @* <a asp-area="" asp-controller="SalesDetails" asp-action="Index" asp-route-transactionid="@item.TransctionID">Details</a>*@ 

                    <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-xs btn-danger"><span class="glyphicon glyphicon-trash"></span></a>
                </td>
            </tr>
        }
    </tbody>
</table>
